@model IEnumerable<CrudMVC.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1>Clientes</h1>

<p>
    <a asp-action="NovoCliente" class="btn btn-success">Novo cliente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Idade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco_Rua)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco_Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco_Bairro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco_UF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Idade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco_Rua)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco_Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco_Bairro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco_UF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                
                <a asp-action="AtualizarCliente" asp-route-clienteId="@item.ClienteId" class="btn btn-primary">Atualizar</a>
              
                <form asp-action="ExcluirCliente" asp-route-clienteId="@item.ClienteId">
                    <button type="submit" class="btn btn-danger">Excluir</button>
                </form>
                
            </td>
        </tr>
}
    </tbody>
</table>
